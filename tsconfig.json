{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@composabase/client": ["./src/graphql/generated/index.ts"],
      "@composabase/*": ["./src/*"],
    },
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist"]
}
